{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "_comment_1": "=================================================================",
  "_comment_2": "Qara PAI Settings Configuration Example",
  "_comment_3": "=================================================================",
  "_comment_4": "This file shows a complete PAI setup with all hooks configured.",
  "_comment_5": "Copy this to settings.json and customize for your environment.",
  "_comment_6": "",
  "_comment_7": "IMPORTANT: Update these values:",
  "_comment_8": "  - PAI_DIR: Absolute path to your .claude directory",
  "_comment_9": "  - PATH: Add your custom binary paths",
  "_comment_10": "  - DA: Your digital assistant name (default: Qara)",
  "_comment_11": "=================================================================",

  "respectGitignore": true,

  "env": {
    "DA": "Qara",
    "PAI_DIR": "${HOME}/.claude",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "PATH": "${HOME}/.local/bin:${HOME}/.cargo/bin:/opt/homebrew/bin:/opt/homebrew/sbin:${HOME}/.local/share/mise/shims:/usr/local/bin:/usr/bin:/bin"
  },

  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "WebFetch(domain:*)",
      "WebSearch",
      "NotebookRead",
      "NotebookEdit",
      "TodoWrite",
      "ExitPlanMode",
      "Task",
      "mcp__*"
    ],
    "deny": [
      "Bash(diskutil partitionDisk)",
      "Bash(diskutil eraseDisk)",
      "Bash(diskutil eraseVolume)",
      "Bash(diskutil reformat)",
      "Bash(diskutil zeroDisk)",
      "Bash(diskutil appleRAID)",
      "Bash(diskutil randomDisk)",
      "Bash(diskutil coreStorage)",
      "Bash(diskutil cs)",
      "Bash(diskutil disableJournal)",
      "Bash(diskutil resetFusion)",
      "Bash(diskutil disableOwnership)",
      "Bash(diskutil apfs deleteContainer)",
      "Bash(diskutil apfs eraseVolume)",
      "Bash(diskutil apfs decryptVolume)",
      "Bash(diskutil apfs changePassphrase)",
      "Bash(diskutil apfs deleteVolume)",
      "Bash(diskutil apfs deleteVolumeGroup)",
      "Bash(diskutil apfs deleteSnapshot)",
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf $HOME)",
      "Bash(rm -rf $PAI_HOME)",
      "Bash(rm -rf $PAI_DIR)",
      "Bash(sudo rm -rf /)",
      "Bash(sudo rm -rf /*)",
      "Bash(fork bomb)",
      "Bash(dd if=/dev/zero of=/dev/sda)",
      "Bash(mkfs.ext4 /dev/sda)",
      "Bash( /dev/sda)",
      "Bash(> /dev/sda)"
    ]
  },

  "model": "opus",
  "enableAllProjectMcpServers": false,
  "enabledMcpjsonServers": [],

  "_hooks_comment_1": "=================================================================",
  "_hooks_comment_2": "HOOKS CONFIGURATION - Complete set of PAI lifecycle hooks",
  "_hooks_comment_3": "=================================================================",
  "_hooks_comment_4": "PreToolUse: Security checks + event capture BEFORE tool execution",
  "_hooks_comment_5": "PostToolUse: Audit + event capture AFTER tool completes",
  "_hooks_comment_6": "SessionStart: Load CORE context, initialize session state",
  "_hooks_comment_7": "SessionEnd: Capture session summary",
  "_hooks_comment_8": "UserPromptSubmit: Update tab titles, capture user input",
  "_hooks_comment_9": "Stop: Extract completion info, update state",
  "_hooks_comment_10": "SubagentStart: Track subagent initialization",
  "_hooks_comment_11": "SubagentStop: Track subagent completion",
  "_hooks_comment_12": "PreCompact: Context compression management",
  "_hooks_comment_13": "=================================================================",

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/pre-tool-use-security.ts"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/capture-all-events.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/post-tool-use-audit.ts"
          },
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/capture-all-events.ts"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/capture-all-events.ts"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/update-tab-titles.ts"
          },
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/capture-all-events.ts"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/session-start.ts"
          },
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/capture-all-events.ts"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/stop-hook.ts"
          },
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/capture-all-events.ts"
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/subagent-start-hook.ts"
          },
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/capture-all-events.ts"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/subagent-stop-hook.ts"
          },
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/capture-all-events.ts"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/pre-compact-context.ts"
          },
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/capture-all-events.ts"
          }
        ]
      }
    ]
  },

  "statusLine": {
    "type": "command",
    "command": "bash ${PAI_DIR}/statusline-command.sh"
  },

  "enabledPlugins": {},
  "alwaysThinkingEnabled": true,
  "showTurnDuration": true,
  "plansDirectory": "thoughts/shared/plans",

  "_comment": "IMPORTANT: Change PAI_DIR above to your actual path (e.g., /Users/john/.claude or /home/john/.claude)",
  "max_tokens": 4096
}
