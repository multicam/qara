{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "respectGitignore": true,
  "env": {
    "DA": "Qara",
    "PAI_DIR": "/home/jean-marc/.claude",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "PATH": "/home/jean-marc/.local/bin:/home/jean-marc/.cargo/bin:/home/jean-marc/.bun/bin:/usr/local/bin:/usr/bin:/bin:/home/jean-marc/.local/share/mise/shims",
    "API_TIMEOUT_MS": "3000000",
    "ENABLE_TOOL_SEARCH": "true"
  },
  "permissions": {
    "allow": [
      "Bash",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "WebFetch(domain:*)",
      "WebSearch",
      "NotebookRead",
      "NotebookEdit",
      "TodoWrite",
      "ExitPlanMode",
      "Task",
      "Skill",
      "mcp__*"
    ],
    "deny": [
      "Bash(rm -rf /)",
      "Bash(rm -rf /*)",
      "Bash(rm -rf ~)",
      "Bash(rm -rf $HOME)",
      "Bash(rm -rf $PAI_HOME)",
      "Bash(rm -rf $PAI_DIR)",
      "Bash(sudo rm -rf /)",
      "Bash(sudo rm -rf /*)",
      "Bash(fork bomb)",
      "Bash(dd if=/dev/zero of=/dev/sda)",
      "Bash(mkfs.ext4 /dev/sda)",
      "Bash( /dev/sda)",
      "Bash(> /dev/sda)"
    ]
  },
  "enableAllProjectMcpServers": false,
  "enabledMcpjsonServers": [
    "brave-devtools"
  ],
  "hooks": {
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/session-start.ts",
            "timeout": 3000
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/pre-tool-use-security.ts",
            "timeout": 1000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/update-tab-titles.ts",
            "timeout": 500
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/post-tool-use.ts",
            "timeout": 2000
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/notification-hook.ts",
            "timeout": 2000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "${PAI_DIR}/hooks/stop-hook.ts",
            "timeout": 2000
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ${PAI_DIR}/statusline-command.sh"
  },
  "enabledPlugins": {},
  "alwaysThinkingEnabled": true,
  "plansDirectory": "thoughts/shared/plans",
  "skipDangerousModePermissionPrompt": true,
  "showTurnDuration": true,
  "releaseChannel": "stable",
  "effortLevel": "medium"
}
