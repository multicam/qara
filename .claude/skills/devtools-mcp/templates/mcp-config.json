{
  "mcpServers": {
    "brave-devtools": {
      "command": "chrome-devtools-mcp",
      "args": [
        "--executablePath",
        "/snap/bin/brave",
        "--isolated",
        "--viewport",
        "1920x1080",
        "--acceptInsecureCerts",
        "--no-usage-statistics",
        "--logFile",
        "/tmp/chrome-devtools-mcp.log",
        "--channel",
        "stable"
      ],
      "env": {
        "DEBUG": "",
        "CHROME_DEVTOOLS_MCP_NO_USAGE_STATISTICS": "1"
      }
    },
    "react-grab-mcp": {
      "command": "bunx",
      "args": ["-y", "@react-grab/mcp", "--stdio"]
    }
  }
}
